<?xml version="1.0"?>
<config>
    <modules>
        <Aligent_Feeds>
            <version>0.1.0</version>
        </Aligent_Feeds>
    </modules>
    <global>
        <blocks>
            <aligent_feeds>
                <class>Aligent_Feeds_Block</class>
            </aligent_feeds>
        </blocks>
        <helpers>
            <aligent_feeds>
                <class>Aligent_Feeds_Helper</class>
            </aligent_feeds>
        </helpers>
    </global>
    <default>
        <aligentfeeds>
            <twitter>
                <enabled>1</enabled>
                <tweet_amount>10</tweet_amount>
                <user_data>0</user_data>
                <get_replies>0</get_replies>
            </twitter>
        </aligentfeeds>
    </default>
    <adminhtml>
        <acl>
            <resources>
                <admin>
                    <children>
                        <system>
                            <children>
                                <config>
                                    <children>
                                        <aligentfeeds>
                                            <title>Store Aligent Feeds Module Section</title>
                                        </aligentfeeds>
                                    </children>
                                </config>
                            </children>
                        </system>
                    </children>
                </admin>
            </resources>
        </acl>
    </adminhtml>
</config>